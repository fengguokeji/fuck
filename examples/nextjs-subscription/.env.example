# --- 支付宝配置 ---
# 生产或沙箱环境必填，用于真实调起支付宝。
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=
ALIPAY_NOTIFY_URL=
ALIPAY_RETURN_URL=

# 显式设置为 true 即可切换到 openapi 沙箱网关。
ALIPAY_USE_SANDBOX=false

# --- 数据库配置 ---
# Vercel Postgres 的连接串
POSTGRES_URL=
# 兼容 @vercel/postgres 的旧版别名（可选）
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
# 将其设为 true 可强制退回内存存储，适合本地演示
ORDERS_FORCE_MEMORY=true

# --- Supabase 集成（可选） ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# --- 应用级设置 ---
# 自定义站点名称（留空则使用“智能助理订阅中心”）
NEXT_PUBLIC_SITE_NAME=
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com
