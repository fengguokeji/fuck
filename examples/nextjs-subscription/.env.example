# --- Alipay configuration ---
# Required for production. When omitted the demo runs in mock mode.
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_ALIPAY_PUBLIC_KEY=
# Alternatively provide certificate-based configuration
ALIPAY_ALIPAY_ROOT_CERT_PATH=
ALIPAY_ALIPAY_PUBLIC_CERT_PATH=
ALIPAY_APP_CERT_PATH=
ALIPAY_NOTIFY_URL=

# Explicitly set to true to use the openapi sandbox gateway.
ALIPAY_USE_SANDBOX=false

# --- Database configuration ---
# Connection string for Vercel Postgres
POSTGRES_URL=
# Optional legacy aliases supported by @vercel/postgres
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# --- Supabase integration (optional) ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# --- Application settings ---
# 自定义站点名称（留空则使用“智能助理订阅中心”）
NEXT_PUBLIC_SITE_NAME=
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com
